<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<!--  Encoding-->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.pres.servlets.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>

  <!--  Img.  -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/img/*</url-pattern>
  </servlet-mapping>

  <!--  DB  -->
  <resource-ref>
    <res-ref-name>jdbc/onlinestore</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>


  <!--Authorization-->
  <servlet-mapping>
    <servlet-name>Authorization</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Authorization</servlet-name>
    <servlet-class>com.pres.servlets.servlet.AuthorizationServlet</servlet-class>
  </servlet>

  <!--Registration-->
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Registration</servlet-name>
    <servlet-class>com.pres.servlets.servlet.RegistrationServlet</servlet-class>
  </servlet>

  <!--Catalog-->
  <servlet-mapping>
    <servlet-name>Catalog</servlet-name>
    <url-pattern>/catalog</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Catalog</servlet-name>
    <servlet-class>com.pres.servlets.servlet.user.CatalogServlet</servlet-class>
  </servlet>

  <!--Basket-->
  <servlet-mapping>
    <servlet-name>Basket</servlet-name>
    <url-pattern>/basket</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Basket</servlet-name>
    <servlet-class>com.pres.servlets.servlet.user.BasketServlet</servlet-class>
  </servlet>

  <!--OrdersCatalog-->
  <servlet-mapping>
    <servlet-name>OrdersCatalog</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>OrdersCatalog</servlet-name>
    <servlet-class>com.pres.servlets.servlet.admin.OrderCatalogServlet</servlet-class>
  </servlet>


  <!--ChangeOrder-->
  <servlet-mapping>
    <servlet-name>ChangeOrder</servlet-name>
    <url-pattern>/changeOrder</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangeOrder</servlet-name>
    <servlet-class>com.pres.servlets.servlet.admin.ChangeOrderServlet</servlet-class>
  </servlet>

  <!--Log out-->
  <servlet-mapping>
    <servlet-name>Log out</servlet-name>
    <url-pattern>/exit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Log out</servlet-name>
    <servlet-class>com.pres.servlets.servlet.LogOutServlet</servlet-class>
  </servlet>

  <!--Personal Profile-->
  <servlet-mapping>
    <servlet-name>PersonalProfile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PersonalProfile</servlet-name>
    <servlet-class>com.pres.servlets.servlet.user.ProfileServlet</servlet-class>
  </servlet>

  <error-page>
    <error-code>404</error-code>
    <location>/view/error.jsp</location>
  </error-page>
</web-app>